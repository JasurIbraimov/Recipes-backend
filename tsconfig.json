{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "target": "ES6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]  // Ensures all files in the src directory are included
}
